<h2 class="sign-up-in">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :username, "User Name", class:"field-label" %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "off", class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :email, class:"field-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "off", class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"field-label" %><br />
    <%= f.password_field :password, autocomplete: "off", class:"field-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class:"field-submit" %>
  </div>
<% end %>

<div class="devise-shared">
  <%= render "devise/shared/links" %>
</div>
